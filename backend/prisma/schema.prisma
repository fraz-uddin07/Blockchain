generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  firstName     String
  lastName      String?
  email         String   @unique
  password      String
  role          String   @default("USER")
  walletAddress String?   @unique
}

model Tickets {
  id Int @id @default(autoincrement())
  tokenId Int @unique
  eventId Int
  metadataUri String?
  ownerWallet String?
  status String @default("valid")
  purchasePrice Int @default(0)

  event Events @relation (fields: [eventId], references: [id])
}

model Events {
  id Int @id @default(autoincrement())
  name String
  date String
  venue String
  status String @default("Pending")
  maxResaleCount Int @default(3)
  priceCap Int @default(120)
  description String?
  posterUrl String?
  seatLayout String?
  type String?
  contractAddress String?

  tickets Tickets[]
}